<%= form_for @workout do |f| %> 

    <%= f.label :name %> 
    <%= f.text_field :name %> 

    <%= f.label :description %> 
    <%= f.text_field :description %>

    Choose Exercise: <%= f.collection_select :exercise_ids, Exercise.all, :id, :name %>
    <%= f.fields_for :exercises, @workout.exercises.build do |exercise| %> 
        <%= exercise.text_field :name %>
    <% end %> 

    <%= f.submit %> 
<% end %> 